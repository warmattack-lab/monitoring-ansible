global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets:
        - 'localhost:9100'
        {# Add monitored nodes from inventory, but avoid duplicating the monitoring server itself #}
        {% for h in groups['monitored_nodes'] | default([]) %}
        {% if h not in groups['monitoring_server'] | default([]) %}
        - '{{ hostvars[h].ansible_host | default(h) }}:{{ hostvars[h].node_exporter_port | default(9100) }}'
        {% endif %}
        {% endfor %}
